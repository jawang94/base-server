{
  "name": "base-server",
  "description": "Base Server",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "local": "NODE_ENV=local ts-node src/index.ts",
    "dev": "NODE_ENV=staging ts-node src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "build": "tsc",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "loadtest": "artillery run artillery.yml > loadtest.log",
    "loadtest-limit": "artillery run artillery-limit.yml > loadtest.log",
    "lint": "eslint --cache --ext .js,.ts --format=pretty ./src",
    "lint-fix": "eslint --fix --cache --ext .js,.ts --format=pretty ./src",
    "prettier-check": "prettier --check \"**/*.ts\" --end-of-line auto",
    "lint-prettier": "prettier \"**/*.ts\" --write",
    "clean-build": "rimraf dist/",
    "clean-all": "yarn clean-build && rimraf node_modules tests/queries/__snapshots__ yarn.lock src/types/graphql.d.ts yarn-error.log",
    "codegen": "graphql-codegen",
    "upgrade-interactive": "npm-check --update"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "{*.json,.{eslintrc,prettierrc,stylelintrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.3",
    "@graphql-codegen/typescript": "^1.13.3",
    "@graphql-codegen/typescript-resolvers": "^1.13.3",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie": "^0.3.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.11",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.13.4",
    "@types/pg": "^7.14.3",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "artillery": "^1.6.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^26.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.5.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.2.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.3.3",
    "terser-webpack-plugin": "^3.0.8",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^3.8.3",
    "webpack": "^4.44.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.0"
  },
  "dependencies": {
    "@graphql-modules/core": "^0.7.15",
    "@graphql-modules/di": "^0.7.15",
    "@safe-api/middleware": "0.0.2",
    "@types/node-rsa": "^1.0.0",
    "apollo-datasource-rest": "^0.9.3",
    "apollo-server-express": "^2.12.0",
    "apollo-server-testing": "^2.12.0",
    "axios": "^0.20.0",
    "bcrypt": "^4.0.1",
    "cookie": "^0.4.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dataloader": "^2.0.0",
    "date-fns": "^2.12.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "graphql": "^15.0.0 || ^14.0.0",
    "graphql-import": "^1.0.2",
    "graphql-postgres-subscriptions": "^1.0.5",
    "graphql-scalars": "^1.1.2",
    "graphql-tools": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.2",
    "lodash": "^4.17.15",
    "moment": "^2.25.3",
    "node-rsa": "^1.1.1",
    "objection": "^2.2.2",
    "pg": "^8.0.3",
    "reflect-metadata": "^0.1.13",
    "sql-template-strings": "^2.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devEngines": {
    "node": ">=7.x",
    "npm": ">=4.x",
    "yarn": ">=0.21.3"
  }
}
